
{
  "compilerOptions": {
    "module": "esNext",                                
    "rootDir": "./",    
    "moduleResolution": "bundler",
    "target": "es2023",
    "outDir": "./dist",  
    // "moduleResolution": "node10", 
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
     "ignoreDeprecations": "5.0"
  },
  "include": ["src", "prisma.config.ts"],
  "exclude": ["node_modules", "dist"]
}
